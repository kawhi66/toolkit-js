{
  "npmClient": "yarn",
  "useWorkspaces": false,
  "version": "independent",
  "packages": ["packages/*"],
  "command": {
    "bootstrap": {
      "registry": "https://r.npm.taobao.org"
    },
    "version": {
      "allowBranch": "master",
      "ignoreChanges": ["**/__tests__/**", "**/*.md"]
    },
    "publish": {
      "registry": "https://registry.npmjs.org"
    }
  }
}
